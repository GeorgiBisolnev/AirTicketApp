@model IEnumerable<FlightViewModel>

@{
    ViewBag.Title = "All Flights";
}


<h2 class="text-center">@ViewBag.Title</h2>



<section style="background-color: #eee;">
       <div class="container py-5">
@foreach (var flight in Model)
{
    <div class="row justify-content-center mb-3">
      <div class="col-md-12 col-xl-10">
        <div class="card shadow-0 border rounded-3">
          <div class="card-body">
            <div class="row">
              <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">               
              </div>
              <div class="col-md-6 col-lg-6 col-xl-6">
                <h5>@flight.ArrivalAirport.Name - @flight.ArrivalAirport.City.Name</h5>
                <div class="d-flex flex-row">

                  <span>Duration: @flight.Duration min.</span>
                </div>
                <div class="mt-1 mb-0 text-muted small">
                  <span>@flight.Airplane.Manufacture.Name</span>
                  <span class="text-primary"> • </span>
                  <span>@flight.Airplane.Model</span>
                </div>
                <!--<div class="mb-2 text-muted small">
                  <span>Unique design</span>
                  <span class="text-primary"> • </span>
                  <span>For men</span>
                  <span class="text-primary"> • </span>
                  <span>Casual<br /></span> 
                </div> 
                <p class="text-truncate mb-4 mb-md-0">
                  There are many variations of passages of Lorem Ipsum available, but the
                  majority have suffered alteration in some form, by injected humour, or
                  randomised words which don't look even slightly believable.
                </p> -->
                <h6>Departure at:</h6>
                <h6>@flight.DepartureDate</h6>
                <h6>Arrives at:</h6>
                <h6>@flight.ArrivalDate</h6>
              </div>
              <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                <div class="d-flex flex-row align-items-center mb-1">                    
                  <h4 class="mb-1 me-1">$@flight.Price</h4>
                   <!-- <span class="text-danger"><s>$20.99</s></span> -->
                </div>
                <!-- <h6 class="text-success">Free shipping</h6> -->
                <div class="d-flex flex-column mt-4">
                  <button class="btn btn-primary btn-sm" type="button">Details</button>
                  <button class="btn btn-outline-primary btn-sm mt-2" type="button">
                    BUY
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
}
  </div>
</section>

