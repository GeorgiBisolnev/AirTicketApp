@model FlightViewModelDetails
@{
    ViewData["Title"] = "View flight";
}
<div class="container">
  <div class="row">
    <div class="col">

    </div>
    <div class="col-7">
      <partial name="_FlightViewDetails" model="@Model" />
    </div>
    <div class="col">

    </div>
  </div>
<div/>

